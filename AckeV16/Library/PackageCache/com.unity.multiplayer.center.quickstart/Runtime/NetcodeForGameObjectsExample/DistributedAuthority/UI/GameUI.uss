/* Global Styles */
* {
    --color-background: rgb(51, 51, 51);
}

Label {
    font-size: 20px;
    color: white;
    text-overflow: ellipsis;
    white-space: normal;
    flex-shrink: 1;
}

/* InGame UI */
#ingame {
    display: flex;
    align-items: center;
    flex-grow: 1;
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    background-color: var(--color-background);
    padding: 8px;
}

/* Login Dialog */
#login {
    border-radius: 8px;
    position: absolute;
    top: 50%;
    left: 50%;
    translate: -50% -50%;
    padding-top: 20px;
    background-color: var(--color-background);
    padding: 16px;
    margin: 16px;
    min-width: 500px;
}

#login-text{
    -unity-text-align: middle-center;
    margin-bottom: 12px;
}

#login-button {
    margin-top: 12px;
    align-self: center;
    flex-grow: 0;
}
